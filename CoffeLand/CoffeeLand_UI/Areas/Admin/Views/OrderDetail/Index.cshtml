@model IEnumerable<CoffeeLand_DATA.Classes.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Sipariş Detayları</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BaristaOfOrderDetail.Firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CoffeeOfOrderDetail.CoffeeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderOfOrderDetail.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BaristaOfOrderDetail.Firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CoffeeOfOrderDetail.CoffeeName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OrderOfOrderDetail.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.ID })
        </td>
    </tr>
}

</table>
